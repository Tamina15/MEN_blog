<form action="/user/register" class="login-form" method="POST">
    <legend>Register</legend>
    Fill out all field
    <% if (typeof message !='undefined' ) { %>
        <% if (message==0) { %>
            <div class="register-fail">
                Registered Fail. Please Try Again.
            </div>
            <% } %>
                <% } %>
                    <div>
                        <label for="username">Username</label>
                        <input type="text" name="username" required>
                    </div>
                    <div>
                        <label for="email">Email</label>
                        <input type="email" name="email" required>
                    </div>
                    <div>
                        <label for="phone">Phone Number</label>
                        <input type="tel" name="phone" pattern="0[1-9]{2}[0-9]{7}">
                    </div>
                    <div>
                        <label for="gender">Gender</label>
                        <select name="gender" id="gender">
                            <option value='male'>Male</option>
                            <option value='female'>Female</option>
                        </select>
                    </div>
                    <div>
                        <label for="age"> Age </label>
                        <input type="tel" name="age" pattern="[1-9]{1}[1-9]{0,2}">
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="password" name="password" required>
                    </div>
                    <div>
                        <label for="repeat_password">Repeat Password</label>
                        <input type="password" name="repeat_password" required>
                    </div>
                    <div>
                        Already have an account.
                        <a href="/user/login">Login here</a>
                    </div>
                    <div>
                        <button type="submit">Register</button>
                    </div>
</form>